<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <Button
        android:id="@+id/logout"
        android:layout_width="85dp"
        android:layout_height="25dp"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_logoutbutton"
        android:text="Log Keluar"
        android:fontFamily="@font/asap"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/logo_apps"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="E-Suplemen Pintar"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold"
            android:fontFamily="@font/asap" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Menu Utama"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/asap"
            android:textSize="20dp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:elevation="20dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/rectangular_field2">

            <ImageView
                android:id="@+id/scan"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/imbas" />

            <TextView
                android:id="@+id/imbas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:text="Imbas Suplemen"
                android:textColor="#0ba360"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/asap"/>

            <ImageView
                android:id="@+id/form"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/masalah_kesihatan" />

            <TextView
                android:id="@+id/masalah_kesihatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/asap"
                android:textStyle="bold"
                android:text="Masalah Kesihatan Anda"
                android:textColor="#0ba360"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/Info"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@drawable/maklumat_bahan_suplemen" />

            <TextView
                android:id="@+id/bahan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:text="Maklumat Bahan Suplemen"
                android:textColor="#0ba360"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="@font/asap"/>

        </LinearLayout>

</LinearLayout>